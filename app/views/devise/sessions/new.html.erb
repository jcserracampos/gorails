<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <div class="block block-themed animated fadeIn">
      <div class="block-header bg-primary">
        <ul class="block-options">
          <li>
            <%if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Esqueceu sua Senha?", new_password_path(resource_name) %><br />
            <% end %>
          </li>
          <li>
            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Registrar", new_registration_path(resource_name) ,class:"btn btn-block btn-primary"%><br />
            <% end %>
          </li>
        </ul>
        <h3 class="block-title">Login</h3>
      </div>
      <div class="block-content block-content-full block-content-narrow">
        <%= form_for(resource, html: {:class => "js-validation-login form-horizontal push-30-t push-50"},  as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true ,class:"form-control"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <% if devise_mapping.rememberable? -%>
            <label class="css-input switch switch-sm switch-primary">
              <%= f.check_box :remember_me ,id:"login-remember-me"%>
            </label>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= f.submit "Entrar" ,class: "btn btn-block btn-primary" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12 col-sm-12 col-md-12" style="margin-top:5px">
            <a class="btn btn-block btn-social btn-google"
              href="<%=user_google_oauth2_omniauth_authorize_path%>">
              <span class="fa fa-google"></span> Entrar com Google
            </a>
            <!--<a class="btn btn-block btn-social btn-facebook"-->
              <!--href="<%#=user_facebook_omniauth_authorize_path%>">-->
              <!--<span class="fa fa-facebook"></span> Entrar com Facebook-->
            <!--</a>-->
            <!--<a class="btn btn-block btn-social btn-github"-->
              <!--href="<%#=user_github_omniauth_authorize_path%>">-->
              <!--<span class="fa fa-github"></span> Entrar com GitHub-->
            <!--</a>-->
            <!--<a class="btn btn-block btn-social btn-linkedin"-->
              <!--href="<%#=user_linkedin_omniauth_authorize_path%>">-->
              <!--<span class="fa fa-linkedin"></span> Entrar com LinkedIn-->
            <!--</a>-->
            <!--<a class="btn btn-block btn-social btn-twitter"-->
              <!--href="<%#=user_twitter_omniauth_authorize_path%>">-->
              <!--<span class="fa fa-twitter"></span> Entrar com Twitter-->
            <!--</a>-->
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
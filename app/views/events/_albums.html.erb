<% if @event.albums.any? %>
    <div class="row items-push">
      <div class="col-sm-8">
        <h1 class="page-heading">
          Galeria de Fotos do Evento
          <small>Aqui vocÃª encontra todas as fotos do evento.</small>
        </h1>
      </div>
    </div>
    <div class="content">
      <div class="row items-push js-gallery-advanced">
        <% @event.albums.order(:created_at).each do |album| %>
            <% album.images.order(:created_at).each do |image| %>
                <div class="col-sm-6 col-md-4 col-lg-3 animated fadeIn">
                  <div class="img-container fx-img-rotate-r">
                    <%= image_tag image.decorate.album_image, class: "img-responsive" %>
                    <div class="img-options">
                      <div class="img-options-content">
                        <h3 class="font-w400 text-white push-5"><%= image.title %></h3>
                        <h4 class="h6 font-w400 text-white-op push-15"><%= album.title %></h4>
                        <a class="btn btn-sm btn-default img-lightbox" href="<%= image.asset.large.url %>">
                          <i class="fa fa-search-plus"></i> Zoom
                        </a>
                      </div>
                    </div>
                  </div>
                </div>

            <% end %>
        <% end %>
      </div>
    </div>
<% else %>
<% end %>

